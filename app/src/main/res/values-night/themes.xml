<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ExpenseTracker" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/yellow</item>
        <item name="colorPrimaryVariant">#E5A310</item>
        <item name="colorOnPrimary">@color/dark_mode_dark_gray</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/yellow</item>
        <item name="colorSecondaryVariant">@color/yellow</item>
        <item name="colorOnSecondary">@color/dark_mode_dark_gray</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

    <!-- Dark Mode -->
    <!-- Hide Action bar -->
    <style name="AppTheme.Splash" parent="@style/Theme.AppCompat.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!-- Action bar -->
    <style name="MyActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/yellow</item>
    </style>

    <!-- Screen Background for Home and Check Records Pages -->
    <style name="SCREEN_1">
        <item name="android:background">@color/yellow</item>
    </style>

    <!-- Screen Background for Add/Edit Record, Settings, and Developers Pages -->
    <style name="SCREEN_2">
        <item name="android:background">@color/dark_mode_dark_gray</item>
    </style>

    <!-- Text for Headings in Check Records Page -->
    <style name="TEXT_CHK_RECS_HEADING">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Text for TextView, etc. -->
    <style name="TEXT_NORMAL">
        <item name="android:textColor">@color/light_gray</item>
    </style>

    <!-- Text for Total Amounts in Home Page -->
    <style name="TEXT_TOTAL_AMT">
        <item name="android:textColor">@color/yellow</item>
    </style>

    <!-- Switch -->
    <style name="SWITCH">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">#34B3F1</item>
    </style>

    <!-- Pie Chart Card -->
    <style name="PIE_CHART_CARD">
        <item name="cardBackgroundColor">@color/dark_mode_gray</item>
    </style>

    <!-- Records List -->
    <style name="RECORDS_LIST">
        <item name="android:background">@color/dark_mode_gray</item>
        <item name="android:textColor">@color/dark_mode_light_gray</item>
    </style>

    <!-- Input Field BackgroundS for Add/Edit Record and Settings Pages -->
    <!-- Upper Shadow Version -->
    <style name="INPUT_FIELD_UPPER">
        <item name="android:background">@drawable/dark_input_field_upper_shadow</item>
        <item name="android:textColor">@color/dark_mode_light_gray</item>
    </style>

    <!-- Upper and Lower Shadow Version -->
    <style name="INPUT_FIELD_UPPER_AND_LOWER">
        <item name="android:background">@drawable/dark_input_field_upper_and_lower_shadows</item>
        <item name="android:textColor">@color/dark_mode_light_gray</item>
    </style>

    <!-- Lower Shadow Version -->
    <style name="INPUT_FIELD_LOWER">
        <item name="android:background">@drawable/dark_input_field_lower_shadow</item>
        <item name="android:textColor">@color/dark_mode_light_gray</item>
    </style>
</resources>

