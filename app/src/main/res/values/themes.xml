<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ExpenseTracker" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- Light Mode -->
    <!-- Screen Background for Add/Edit Record, Settings, and Developers Pages -->
    <style name="SCREEN_1">
        <item name="android:background">@color/yellow</item>
    </style>

    <!-- Screen Background for Add/Edit Record, Settings, and Developers Pages -->
    <style name="SCREEN_2">
        <item name="android:background">@color/light_gray</item>
    </style>

    <!-- Text for Headings in Check Records Page -->
    <style name="TEXT_CHK_RECS_HEADING">
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Text for TextView, etc. -->
    <style name="TEXT_NORMAL">
        <item name="android:textColor">@color/gray</item>
    </style>

    <!-- Text for Developers Description -->
    <style name="TEXT_DEV">
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- Input Field BackgroundS for Add/Edit Record and Settings Pages -->
    <!-- Upper Shadow Version -->
    <style name="INPUT_FIELD_UPPER">
        <item name="android:background">@drawable/light_input_field_upper_shadow</item>
        <item name="android:textColor">@color/gray</item>
    </style>

    <!-- Upper and Lower Shadow Version -->
    <style name="INPUT_FIELD_UPPER_AND_LOWER">
        <item name="android:background">@drawable/light_input_field_upper_and_lower_shadows</item>
        <item name="android:textColor">@color/gray</item>
    </style>

    <!-- Lower Shadow Version -->
    <style name="INPUT_FIELD_LOWER">
        <item name="android:background">@drawable/light_input_field_lower_shadow</item>
        <item name="android:textColor">@color/gray</item>
    </style>
</resources>

